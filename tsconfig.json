{
	"include": ["docs", "packages"],
	"exclude": ["node_modules", "lib", "dist"],
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"types": ["node"],
		"paths": {
			"@d/*": ["./docs/*"],
			"@p": ["./packages"],
			"@p/*": ["./packages/*"]
		}
	}
	// "references": [{ "path": "./tsconfig.node.json" }]
}
